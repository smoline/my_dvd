<div class="page-header">
  <%= link_to dvds_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_dvd_path(@dvd), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <div class="well well-lg custom-well">
    <p>Share with your friends!</p>
    <%= social_share_button_tag(@dvd.title, :url => "http://my-media-library.com", allow_sites: %w(twitter facebook linkedin)) %>
  </div>
  <h1>Show dvd</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @dvd.title %></dd>

  <dt>Description:</dt>
  <dd><%= @dvd.description %></dd>

  <dt>Disc type:</dt>
  <dd><%= @dvd.disc_type %></dd>

  <dt>UPC:</dt>
  <dd><%= @dvd.upc %></dd>

</dl>
