<div class="page-header">
  <%= link_to dvds_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_dvd_path(@dvd), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show dvd</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @dvd.title %></dd>

  <dt>Disc type:</dt>
  <dd><%= @dvd.disc_type %></dd>

  <dt>UPC:</dt>
  <dd><%= @dvd.upc %></dd>

</dl>
